extends base

block content 
  if errorMessage 
    span=errorMessage
  form(method="POST")
    input(placeholder="Name" type="text" name="name" required)
    input(placeholder="Email" type="email" name="email" required)
    input(placeholder="User Name" type="text" name="username" required)
    input(placeholder="Password" type="password" name="password" required)
    input(placeholder="Confirm Password" type="password" name="confirmedPassword" required)
    input(placeholder="Location" type="text" name="location" required)
    input(type="submit", value="Sign up")
  hr
  div 
    span Already have an account? 
    a(href="/sign-in") Sign in &rarr;